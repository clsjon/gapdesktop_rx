		<s:layout><s:VerticalLayout gap="10" paddingLeft="10" paddingBottom="10" paddingRight="10" paddingTop="10"/></s:layout>
		<s:Scroller width="100%" height="100%">
				<s:RichEditableText id="tosDisplay" editable="false" fontFamily="Avenir-light" creationComplete="tosDisplay_creationCompleteHandler(event)" multiline="true" height="100%" width="100%" selectable="false" clipAndEnableScrolling="true"/>
		</s:Scroller>
		<s:Button id="closeTosButton" click="closeSettingsButton_clickHandler()" label="Close" styleName="settingsButtonStyle"/>		
	</s:Group>
	
	
	
	
	<s:transitions>
		<s:Transition autoReverse="true" fromState="MainState" toState="TosState">
			<s:Sequence>
				<s:SetAction property="visible" value="false" target="{maingroup}"/>
				<s:SetAction property="includeInLayout" value="false" target="{maingroup}"/>
				<s:Fade duration="200" target="{maingroup}"/>
				<s:SetAction property="includeInLayout" value="true" target="{tosgroup}"/>
				<s:SetAction property="visible" value="true" target="{tosgroup}"/>
				<s:Fade duration="200" target="{tosgroup}"/>
			</s:Sequence>
		</s:Transition>
		<s:Transition autoReverse="true" fromState="TosState" toState="MainState">
			<s:Sequence>
				<s:SetAction property="includeInLayout" value="false" target="{tosgroup}"/>
				<s:SetAction property="visible" value="false" target="{tosgroup}"/>
				<s:Fade duration="200" target="{tosgroup}"/>
				<s:SetAction property="visible" value="true" target="{maingroup}"/>
				<s:SetAction property="includeInLayout" value="true" target="{maingroup}"/>
				<s:Fade duration="200" target="{maingroup}"/>
			</s:Sequence>
		</s:Transition>
		
		<s:Transition fromState="MainState" toState="TlzState" autoReverse="false">
			<s:Sequence>
				
				<s:SetAction property="visible" value="false" target="{maingroup}"/>
				<s:SetAction property="includeInLayout" value="false" target="{maingroup}"/>
				<s:Fade duration="200" target="{maingroup}"/>
				<s:SetAction property="visible" value="false" target="{headinggroup}"/>
				<s:SetAction property="includeInLayout" value="false" target="{headinggroup}"/>
				<s:Fade duration="200" target="{maingroup}"/>
				<s:Animate target="{this}" duration="200">
					<s:SimpleMotionPath property="nativeBounds" interpolator="{rectInterp}"
										valueTo="{resizableRect}"/>
				</s:Animate>
				
				<s:SetAction property="includeInLayout" value="true" target="{tlzgroup}"/>
				<s:SetAction property="visible" value="true" target="{tlzgroup}"/>
				<s:Fade duration="200" target="{tlzgroup}"/>
				
				<s:Fade duration="1000" target="{tlzgroup}"/>
				
				
			</s:Sequence>
		</s:Transition>
		<s:Transition fromState="TlzState" toState="MainState" autoReverse="true">
			<s:Sequence>
				
				<s:SetAction property="includeInLayout" value="false" target="{tlzgroup}"/>
				<s:SetAction property="visible" value="false" target="{tlzgroup}"/>
				<s:Fade duration="200" target="{tlzgroup}"/>
				
				<s:Animate target="{this}" duration="200">
					<s:SimpleMotionPath property="nativeBounds" interpolator="{rectInterp}"
										valueTo="{fixedSizeRect}"/>
				</s:Animate>
				
				<s:SetAction property="visible" value="true" target="{maingroup}"/>
				<s:SetAction property="includeInLayout" value="true" target="{maingroup}"/>
				<s:Fade duration="200" target="{maingroup}"/>
				
				<s:SetAction property="visible" value="true" target="{headinggroup}"/>
				<s:SetAction property="includeInLayout" value="true" target="{headinggroup}"/>
				<s:Fade duration="200" target="{maingroup}"/>
				
				
			</s:Sequence>
		</s:Transition>
		
	</s:transitions>
</s:WindowedApplication>
