<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="Example"
  xmlns:rx="org.restfulx.components.rx.*" xmlns:s="library://ns.adobe.com/flex/spark">
  <mx:Script><![CDATA[
  	import gapdesktoprx.models.Example;
  	import gapdesktoprx.models.Graph;
  	import gapdesktoprx.models.Submitter;
  	
  	import org.restfulx.Rx;
  	import org.restfulx.utils.RxUtils;

    [Bindable]
    private var example:Example = new Example();

    private function newExample():void {
      example = new Example();
      examplesList.selectedIndex = -1;
    }

    private function saveExample():void {
      updateModelProperties();
      if (example.id) {
        example.update({onSuccess: onExampleUpdate});
      } else {
        example.create({onSuccess: onExampleCreate});
      }
    }
  
    private function updateModelProperties():void {
      example.hash = hashTextInput.text;
      example.content = contentTextInput.text;
      example.name = nameTextInput.text;
      example.userGenerated = userGeneratedCheckBox.selected;
	  example.introText = introTextTextInput.text;
	  example.introImage = introImageTextInput.text;
	  example.graph = Graph(graphComboBox.selectedItem);
      example.submitter = Submitter(submitterComboBox.selectedItem);
    }

    private function destroyExample():void {
      example.destroy({onSuccess: onExampleDestroy});
    }
  
    private function onExampleSelect():void {
      example = RxUtils.clone(examplesList.selectedItem) as Example;
    }
  
    private function onExampleCreate(result:Example):void {
		trace('Example created');
      example = new Example;
    }
  
    private function onExampleUpdate(result:Example):void {
		trace('Example updated');
      examplesList.selectedItem = result;
      onExampleSelect();
    }
  
    private function onExampleDestroy(result:Example):void {
      onExampleCreate(result);
    }
  ]]></mx:Script>
  <mx:Panel id="examplesPanel"
    title="Examples" cornerRadius="0" borderStyle="solid" 
    backgroundColor="#EEEEEE" width="25%" height="100%">
    <mx:List id="examplesList"
      width="100%" height="100%"
      dataProvider="{catalyst.models.examples}"
      change="onExampleSelect()"/>
    <mx:ControlBar width="100%">
      <mx:Button label="New Example" width="100%" height="30"
        click="newExample()"/>
    </mx:ControlBar>
  </mx:Panel>
  <mx:Panel title="Edit Example" cornerRadius="0" borderStyle="solid" 
    backgroundColor="#EEEEEE" width="75%" height="100%">
    <mx:Form width="100%" height="100%">
		<mx:FormItem label="Name" width="100%">
			<mx:TextInput id="nameTextInput" width="100%" text="{example.name}"/>
		</mx:FormItem>
        <mx:FormItem label="Content" width="100%">
        <mx:TextInput id="contentTextInput" width="100%" text="{example.content}"/>
      </mx:FormItem>
		<mx:FormItem label="Intro text" width="100%">
			<mx:TextInput id="introTextTextInput" width="100%" text="{example.introText}"/>
		</mx:FormItem>
		<mx:FormItem label="Intro image" width="100%">
			<mx:TextInput id="introImageTextInput" width="100%" text="{example.introImage}"/>
		</mx:FormItem>
		<mx:FormItem label="Hash" width="100%">
			<mx:TextInput id="hashTextInput" width="100%" text="{example.hash}"/>
		</mx:FormItem>
		<mx:FormItem width="100%">
			<mx:CheckBox id="userGeneratedCheckBox" label="User generated" selected="{example.userGenerated}"/>
		</mx:FormItem>
		   <mx:FormItem label="Graph" width="100%">
        <mx:ComboBox id="graphComboBox" width="200"
          labelField="{Graph.LABEL}"
          dataProvider="{Rx.models.index(Graph)}" prompt="Graph ..."
          selectedItem="{example.graph}" />
      </mx:FormItem>
      <mx:FormItem label="Submitter" width="100%">
        <mx:ComboBox id="submitterComboBox" width="200"
          labelField="{Submitter.LABEL}"
          dataProvider="{Rx.models.index(Submitter)}" prompt="Submitter ..."
          selectedItem="{example.submitter}" />
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%">
      <mx:Button label="Save Example" width="50%" height="30"
        click="saveExample()"/>
      <mx:Button label="Delete Example" width="50%" height="30"
        enabled="{RxUtils.canDeleteModel(example)}"
        click="destroyExample()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:HBox>