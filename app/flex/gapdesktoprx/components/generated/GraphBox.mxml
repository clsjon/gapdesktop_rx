<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="Graph"
  xmlns:rx="org.restfulx.components.rx.*">
  <mx:Script><![CDATA[
    import org.restfulx.Rx;
    import org.restfulx.utils.RxUtils;
    import gapdesktoprx.models.Graph;

    [Bindable]
    private var graph:Graph = new Graph();

    private function newGraph():void {
      graph = new Graph();
      graphsList.selectedIndex = -1;
    }

    private function saveGraph():void {
      updateModelProperties();
      if (graph.id) {
        graph.update({onSuccess: onGraphUpdate});
      } else {
        graph.create({onSuccess: onGraphCreate});
      }
    }
  
    private function updateModelProperties():void {
      graph.name = nameTextInput.text;
      graph.downloadKey = downloadKeyTextInput.text;
      graph.downloadedDate = downloadedDateDateField.selectedDate;
      graph.localPath = localPathTextInput.text;

    }

    private function destroyGraph():void {
      graph.destroy({onSuccess: onGraphDestroy});
    }
  
    private function onGraphSelect():void {
      graph = RxUtils.clone(graphsList.selectedItem) as Graph;
    }
  
    private function onGraphCreate(result:Graph):void {
      graph = new Graph;
    }
  
    private function onGraphUpdate(result:Graph):void {
      graphsList.selectedItem = result;
      onGraphSelect();
    }
  
    private function onGraphDestroy(result:Graph):void {
      onGraphCreate(result);
    }
  ]]></mx:Script>
  <mx:Panel id="graphsPanel"
    title="Graphs" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid" 
    borderThickness="1" backgroundColor="#EEEEEE" width="25%" height="100%">
    <mx:List id="graphsList"
      width="100%" height="100%"
      dataProvider="{Rx.models.index(Graph)}"
      change="onGraphSelect()"/>
    <mx:ControlBar width="100%">
      <mx:Button label="New Graph" width="100%" height="30"
        click="newGraph()"/>
    </mx:ControlBar>
  </mx:Panel>
  <mx:Panel title="Edit Graph" cornerRadius="0" dropShadowEnabled="false" borderStyle="solid" 
    borderThickness="1" backgroundColor="#EEEEEE" width="75%" height="100%">
    <mx:Form width="100%" height="100%">
      <mx:FormItem label="Name" width="100%">
        <mx:TextInput id="nameTextInput" width="100%" text="{graph.name}"/>
      </mx:FormItem>
      <mx:FormItem label="DownloadKey" width="100%">
        <mx:TextInput id="downloadKeyTextInput" width="100%" text="{graph.downloadKey}"/>
      </mx:FormItem>
      <mx:FormItem label="DownloadedDate" width="100%">
        <mx:DateField id="downloadedDateDateField" selectedDate="{graph.downloadedDate}"/>
      </mx:FormItem>
      <mx:FormItem label="LocalPath" width="100%">
        <mx:TextInput id="localPathTextInput" width="100%" text="{graph.localPath}"/>
      </mx:FormItem>
    </mx:Form>
    <mx:ControlBar width="100%">
      <mx:Button label="Save Graph" width="50%" height="30"
        click="saveGraph()"/>
      <mx:Button label="Delete Graph" width="50%" height="30"
        enabled="{RxUtils.canDeleteModel(graph)}"
        click="destroyGraph()"/>
    </mx:ControlBar>
  </mx:Panel>
</mx:HBox>