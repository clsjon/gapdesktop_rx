<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/halo" 
		 width="100%" 
		 height="30"
		 creationComplete="panel1_creationCompleteHandler(event)" xmlns:mx1="library://ns.adobe.com/flex/mx"
		 
		 keyDown="titlewindow1_keyDownHandler(event)"
		 styleName="nameExampleStyle"
		 >
	<fx:Metadata>
		[Event(name="nameExample", type="gapdesktoprx.events.NameExampleEvent")]
	</fx:Metadata>
	<fx:Declarations>
		
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import flash.events.MouseEvent;
			
			import gapdesktoprx.events.NameExampleEvent;
			
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			
			private function titlewindow1_keyDownHandler(event:KeyboardEvent):void {
				if (event.charCode == Keyboard.ESCAPE) {
					this.dispatchEvent(new CloseEvent(CloseEvent.CLOSE));
				}
				if (event.charCode == Keyboard.ENTER) {
					submitAndClose();
				}
			}
			
			protected function submitAndClose():void {				
				dispatchEvent(new NameExampleEvent(graphName.text,true));
				this.dispatchEvent(new CloseEvent(CloseEvent.CLOSE));
			}
			
			
			protected function okButton_clickHandler(event:MouseEvent):void
			{
				submitAndClose();
			}
			
			
			protected function cancelButton_clickHandler(event:MouseEvent):void
			{
				this.dispatchEvent(new CloseEvent(CloseEvent.CLOSE));
			}
			
			
			protected function panel1_creationCompleteHandler(event:FlexEvent):void
			{
				graphName.setFocus();
			}
			
			
			protected function titlewindow1_closeHandler(event:CloseEvent):void
			{
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</fx:Script>
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="#EEEEEE"/>
		</s:fill>
	</s:Rect>
	<s:Group id="content" width="100%">
		<s:layout><s:HorizontalLayout gap="10" paddingBottom="10" paddingTop="10" paddingLeft="10" paddingRight="10" verticalAlign="middle"/></s:layout>
		<s:Label text="Enter a name for this graph:"/>
		<s:TextInput id="graphName" width="30%" fontSize="9"/>
		<s:Button id="cancelButton" styleName="settingsButtonStyle" label="Cancel" click="cancelButton_clickHandler(event)"/>
		<s:Button id="okButton" styleName="settingsButtonStyle" label="Create bookmark" click="okButton_clickHandler(event)"/>
	</s:Group>	
	
	
</s:Group>
